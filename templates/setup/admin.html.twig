{% extends 'base.setup.html.twig' %}

{% block title %}Administrator information{% endblock %}

{% block wrapper_classes %}d-flex{% endblock %}

{% block body %}
<div class="container flex-fill d-flex">
    <div class="row flex-fill d-flex align-items-center">
        <div class="col-8 m-auto">
            <form action="{{ path('setup_admin') }}" method="post" class="card">
                <h2 class="card-title">
                    Admin user <button class="btn btn-sm float-right" type="submit">Done</button>
                </h2>

                {{ form_row(form.username) }}
                {{ form_row(form.plainPassword, {
                    label: 'Password'
                }) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
