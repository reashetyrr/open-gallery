{% extends 'base.setup.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block wrapper_classes %}d-flex{% endblock %}

{% block body %}
<div class="container flex-fill d-flex">
    <div class="row flex-fill d-flex align-items-center">
        <div class="col-8 m-auto">
            <form class="card" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h2 class="card-title">
                    Please sign in <button class="btn btn-sm float-right" type="submit">Sign in</button>
                </h2>

                <label for="inputUsername">Username</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control alt-dm" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control alt-dm" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
            </form>
        </div>
    </div>
</div>
{% endblock %}
